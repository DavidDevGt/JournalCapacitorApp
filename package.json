{
  "name": "journalcapacitorapp",
  "version": "1.0.0",
  "description": "Minimalist journaling app with Capacitor and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./www/css/main.css -o ./www/css/styles.css --watch",
    "sync": "npm run build && npx cap sync",
    "build:android": "npm run build && npx cap build android",
    "build:ios": "npm run build && npx cap build ios",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios",
    "android": "npm run build && npx cap sync android",
    "ios": "npm run build && npx cap sync ios"
  },
  "keywords": [
    "journaling",
    "capacitor",
    "mobile",
    "tailwind"
  ],
  "author": "DavidDevGt",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.1",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor-community/sqlite": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/camera": "^6.0.0",
    "@capacitor/device": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@capacitor/toast": "^6.0.0",
    "@vitejs/plugin-legacy": "^6.1.1",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0"
  }
}
