{
  "name": "journalcapacitorapp",
  "version": "1.0.0",
  "description": "Minimalist journaling app with Capacitor and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./www/css/main.css -o ./www/css/styles.css --watch",
    "sync": "npm run build && npx cap sync",
    "build:android": "npm run build && npx cap build android",
    "build:ios": "npm run build && npx cap build ios",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios",
    "android": "npm run build && npx cap sync android",
    "ios": "npm run build && npx cap sync ios",
    "android:build": "cd android && .\\gradlew.bat assembleDebug",
    "android:build-release": "cd android && .\\gradlew.bat assembleRelease",
    "android:install": "adb install -r android\\app\\build\\outputs\\apk\\debug\\app-debug.apk",
    "android:logs": "adb logcat --pid=$(adb shell pidof com.daviddevgt.journalapp)",
    "mobile:build-install": "powershell -ExecutionPolicy Bypass -File .\\build-and-install.ps1",
    "mobile:dev-tools": "powershell -ExecutionPolicy Bypass -File .\\dev-tools.ps1",
    "git:feature": "git checkout develop && git pull origin develop && git checkout -b",
    "git:hotfix": "git checkout main && git pull origin main && git checkout -b",
    "git:release": "git checkout develop && git pull origin develop && git checkout -b",
    "git:cleanup": "git branch --merged | grep -v \"\\*\" | grep -v \"main\" | grep -v \"develop\" | xargs -n 1 git branch -d",
    "git:log": "git log --oneline --graph --all",
    "git:tags": "git tag -l",
    "commit:feat": "git commit -m \"feat:",
    "commit:fix": "git commit -m \"fix:",
    "commit:docs": "git commit -m \"docs:",
    "commit:style": "git commit -m \"style:",
    "commit:refactor": "git commit -m \"refactor:",
    "commit:test": "git commit -m \"test:",
    "commit:chore": "git commit -m \"chore:",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "keywords": [
    "journaling",
    "capacitor",
    "mobile",
    "tailwind"
  ],
  "author": "DavidDevGt",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.1",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/network": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor-community/sqlite": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/camera": "^6.0.0",
    "@capacitor/device": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@capacitor/toast": "^6.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@vitejs/plugin-legacy": "^6.1.1",
    "autoprefixer": "^10.4.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0"
  }
}
